<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/card_background">

        <TextView
            android:id="@+id/step_id_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/id_background_circle"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="1" />

        <TextView
            android:id="@+id/step_card_descrip_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            tools:text="Long text to test how this looks in the event of an abnormally long short description."/>

    </LinearLayout>


</android.support.v7.widget.CardView>